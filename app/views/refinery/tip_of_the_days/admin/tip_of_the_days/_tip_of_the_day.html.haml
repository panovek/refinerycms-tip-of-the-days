%li{:class => "clearfix record #{cycle("on", "on-hover")}", :id => dom_id(tip_of_the_day)}
  %span.title
    = tip_of_the_day.title
  %span.actions
    = link_to refinery_icon_tag("application_go.png"), refinery.tip_of_the_days_tip_of_the_day_path(tip_of_the_day), |
      :title => t('.view_live_html'),                                                                                |
      :target => "_blank"                                                                                            |
    -#
    = link_to refinery_icon_tag("application_edit.png"), refinery.edit_tip_of_the_days_admin_tip_of_the_day_path(tip_of_the_day), |
      :title => t('.edit')                                                                                                        |
    -#
    = link_to refinery_icon_tag("delete.png"), refinery.tip_of_the_days_admin_tip_of_the_day_path(tip_of_the_day), |
      :class => "cancel confirm-delete",                                                                           |
      :title => t('.delete'),                                                                                      |
      :data => {:confirm => t('message', :scope => 'refinery.admin.delete', :title => tip_of_the_day.title)},      |
      :method => :delete                                                                                           |
